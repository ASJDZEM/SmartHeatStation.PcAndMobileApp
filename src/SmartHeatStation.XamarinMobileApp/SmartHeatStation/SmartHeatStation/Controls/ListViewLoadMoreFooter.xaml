<?xml version="1.0" encoding="UTF-8" ?>
<ContentView
    x:Class="SmartHeatStation.Controls.ListViewLoadMoreFooter"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <StackLayout
        x:Name="loadIngView"
        HorizontalOptions="CenterAndExpand"
        IsVisible="True"
        Orientation="Horizontal">
        <ActivityIndicator
            x:Name="progressCircleBar"
            HeightRequest="20"
            IsRunning="True"
            VerticalOptions="Center"
            WidthRequest="20" />
        <Label
            x:Name="label"
            Margin="0,10,0,10"
            Text="正在加载..."
            TextColor="Black"
            VerticalOptions="Center" />
    </StackLayout>
</ContentView>
